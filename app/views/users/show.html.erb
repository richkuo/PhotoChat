<% provide(:title, @user.name) %>
<div class="row">
<br>

  <aside class="span3 offset1">

    <%= gravatar_for @user, size: 200 %> 

    <% if current_user.admin? %>
      <%= render 'shared/stats' %>
    <% end %>
  
  </aside>

  <div class="span6 offset0">
<br>
    <h1><%= @user.name %></h1>

    <h2><a href="<%= pictures_user_path %>"><%= pluralize current_user.pictures.count, "picture" %></a></h2>
  <% if current_user?(@user) %>
    <h3><%= link_to "Account Settings", edit_user_path(current_user) %></h3>
  <% end %>

  </div>
</div>

<br>

<%= render 'shared/user_events' %>
