<%= provide(:title, @event.title ) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <% if host? %>
        <%= link_to "Invite your friends", uploaders_event_path, class: "btn btn-large btn-primary" %>
      <% end %>
    </section>
    <section>
      Number of uploaders in this event: 
      <%= current_event.uploaders.count %>
      <br>Host ID:
      <%= current_event.host_id %>
      <br>Event title: <%= @event.title %>
    </section>
  </aside>
<% if host? %>
<div class="span8">
  <%= render 'pictures/index' %>
  render pictures/index
  host true
  <%= link_to "delete", @event, method: :delete, data: { confirm: "Are you sure you want to permanently delete this event?" } %>
<% else %>

  Sorry! You do not have permission to view this event.

</div>
<% end %>
</div>
