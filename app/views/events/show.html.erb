<%= provide(:title, @event.title ) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
      <% if host?(@event) %>
        <section>
          <%= link_to "Invite Your Friends To This Event!", event_uploaders_path(@event), class: "btn btn-block btn-large" %>
        </section>
      <% end %>
      
      <% if current_user.reverse_invitations.find_by_event_id(params[:id]) || host?(@event) %>
        <section>
          <%= link_to "Upload Pictures", new_event_picture_path(@event), class: "btn btn-large btn-warning" %>
        | <%= link_to "View All Pictures", event_pictures_path(@event), class: "btn btn-large btn-info" %>
        </section>
      <% end %>
  <section>
      Number of attendees in this event: 
      <%= @event.uploaders.count %>
      <br>Host ID:
      <%= @event.host_id %>
      <br>Number of pictures in this event:
      <%= @event.pictures.count %>
    </section>
  </aside>
<% if current_user.reverse_invitations.find_by_event_id(params[:id]) || host?(@event) %>
<div class="span8">
<h1><%= @event.title %></h1><br>
<h2><%= @event.description %><br><br></h2>
<div class="hero-unit">
  <% for picture in @event.pictures %>
  <div><p>
  <%= image_tag picture.image_url(:thumb) %>
  <br>Uploaded by <%= User.find(picture.user_id).name %>, <%= time_ago_in_words(picture.created_at) %> ago.<br><br>
  </div></p>
  <% end %>
</div>
<% else %>

Sorry <%= current_user.name %>, you do not have permission to view this event.

</div>
<% end %>
</div>
