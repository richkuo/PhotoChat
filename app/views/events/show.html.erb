<%= provide(:title, @event.title ) %>
<%= render 'shared/image_gallery' %>
<div class="row">
  <aside class="span4">

    <%= render 'shared/user_info' %>

    <%= render 'shared/event_navigation' %>

    <% render 'shared/stats' %>

  </aside>

<% if current_user.reverse_invitations.find_by_event_id(params[:id]) || host?(@event) %>
<div class="span8">
<h1><%= @event.title %></h1>
<br><h2><%= @event.description %><br><br></h2>
<h3>Hosted by <%= link_to User.find_by_id(@event.host_id).name, User.find_by_id(@event.host_id) %><br>
<br><%= pluralize(@event.uploaders.count, "Attendee") %> | <%= pluralize(@event.pictures.count, "Picture") %></h3>
<br>

<div class="hero-unit">

<div id="gallery" data-toggle="modal-gallery" data-target="#modal-gallery">
  <% @event.pictures.each do |picture| %>
    <a href="<%= picture.image %>" rel="gallery"><%= image_tag picture.image.thumb if picture.image? %></a>
  <% end %>

</div>
<% else %>

Sorry <%= current_user.name %>, you need to be invited to this event to view it.

</div>
<% end %>
</div>
