<%= provide(:title, @event.title ) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
      <% if current_user.following_host? || current_user.admin? %>
      <section>
        <%= link_to "Upload Pictures", new_event_picture_path(@event), class: "btn btn-large btn-success" %>
        | <%= link_to "View All Pictures", event_pictures_path(@event), class: "btn btn-large btn-info" %>
      <% end %>
    </section>
    <section>
      Number of attendees in this event: 
      <% current_event.uploaders.count %>
      <%= User.find(current_event.host_id).followers.count%>
      <br>Host ID:
      <%= current_event.host_id %>
      <br>Number of pictures in this event:
      <%= @event.pictures.count %>
    </section>
  </aside>
<% if current_user.following_host? || current_user.admin? %>
<div class="span8">
<h1><%= @event.title %></h1><br>
<h2><%= @event.description %><br><br></h2>
<div class="hero-unit">
  <% for picture in @event.pictures %>
  <div><p>
  <%= image_tag picture.image_url(:thumb) %>
  <br>Uploaded by <%= User.find(picture.user_id).name %>, <%= time_ago_in_words(picture.created_at) %> ago.<br><br>
  </div></p>
  <% end %>
</div>
<% else %>

Sorry <%= current_user.name %>, you do not have permission to view this event.

</div>
<% end %>
</div>
