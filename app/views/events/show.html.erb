<head>

<%= provide(:title, @event.title ) %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
<%= javascript_include_tag "galleria-1.2.8.min.js" %>
<style>
  #galleria{ width: 500px; height: 500px; background: #000 }
</style>
</head>

<div class="row">
  <aside class="span4">

    <%= render 'shared/user_info' %>

    <%= render 'shared/event_navigation' %>

    <% render 'shared/stats' %>

  </aside>

<% if current_user.reverse_invitations.find_by_event_id(params[:id]) || host?(@event) %>
<div class="span8">
<h1><%= @event.title %></h1>
<br><h2><%= @event.description %><br><br></h2>
<h3>Hosted by <%= link_to User.find_by_id(@event.host_id).name, User.find_by_id(@event.host_id) %><br>
<br><%= pluralize(@event.uploaders.count, "Attendee") %> | <%= pluralize(@event.pictures.count, "Picture") %></h3>
<br>

<div class="hero-unit">

<div id="galleria">

<% @event.pictures.each do |picture| %>
    <a href="<%= picture.image %>"><%= image_tag picture.image if picture.image? %></a>
  <% end %>

</div>
<% else %>

Sorry <%= current_user.name %>, you need to be invited to this event to view it.

</div>
<% end %>
</div>
<script>
  Galleria.loadTheme("<%= javascript_path('galleria.classic.js') %>");
  Galleria.run('#galleria');
</script>
